extends layout

script(type='text/javascript').
      function pay(){

      }

block content
  form.am-g(action='/takeOrder',method='get')
  p 订单号:     #{order.orderNo}
  p 订单日期:   #{order.flightDate}
  hr
  p 订单信息
  .am-g
    .am-u-sm-12
    #orderlist
          table(width='100%', height='100%', border='1', cellspacing='0', cellpadding='0')
            tbody
              tr
                th 行程类型
                th 航班号
                th 航位
                th 起降机场
                th 起降时间
              tr
                td 往返
                td #{order.flightNo}
                td #{order.flightCabin}
                td #{order.flightDeparture} -- #{order.flightArrival}
                td #{startTime} -- #{endTime}
              hr
              tr
                th  乘客类型
                th  人数
                th  票面价
                th  机料/燃油
                th  机票总价
              tr
                td  #{order.passengerType}
                td  1
                td  #{order.orderOriginPrice}
                td  #{sum}
                td  #{order.orderTotalPrice}
     p
    .am-g
        .am-u-sm-12
          table(width='100%', height='100%', border='1', cellspacing='0', cellpadding='0')
               tr
                   th   序号
                   th   乘客类型
                   th   乘客姓名
                   th   性别
                   th   证件类型
                   th   证件号
                   th   证件有效期
                   th   票号
               tr
                   td   1
                   td   #{order.passengerType}
                   td   #{order.passengerName}
                   td
                   td   #{order.passengerIdentifyType}
                   td   #{order.passengerIdentify}
                   td   长期有效
                   td   #{order.flightNo}

    p   出票工具
                .am-g
                    .am-u-sm-12
                      table(width='70%', height='100%', border='1', cellspacing='0', cellpadding='0')
                            tr
                                th  出票渠道
                                th  外部订单号
                                th  订单状态
                                th  乘客姓名
                                th  支付总价￥
                                th  刷新订单
                                th  支付
                            tr
                                td #{order.orderAgent}
                                td #{order.orderNo}
                                td #{order.orderStatus}
                                td #{order.passengerName}
                                td #{order.orderTotalPrice}
                                td
                                    input(name='reflesh', value='刷新订单', type='button' onblick='reflesh()')
                                td
                                    input(name='pay', value='支付', type='button' onblick='pay()')
    hr
    p   退改规则
            .am-g
                .am-u-sm-12
                  table(width='70%', height='100%', border='1', cellspacing='0', cellpadding='0')
                        tr
                            td 成人票
                            td 去程
                            td !{order.notice}
                        tr
                            td 儿童票
                            td 去程
                            td
                                p 退票条件：以航空公司规则为准
                                p 退票条件：以航空公司规则为准
                                p 退票条件：以航空公司规则为准


